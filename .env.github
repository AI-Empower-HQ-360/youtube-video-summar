# ==============================================
# GITHUB PAGES ENVIRONMENT
# ==============================================
# This file is used for GitHub Pages deployment

# Application
VITE_APP_NAME=VidNote - YouTube Video Summarizer
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=AI-powered YouTube video summarization tool - Turn videos into instant knowledge

# API Configuration
# Note: For GitHub Pages demo, we're using mock data
# For production with backend, update this to your backend URL
VITE_API_BASE_URL=

# AI Services (client-side - use with caution)
# For production, API keys should be on backend only
VITE_OPENAI_API_KEY=
VITE_OPENAI_MODEL=gpt-4-turbo-preview

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=false
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_EXPERIMENTAL_FEATURES=false

# Development Settings
VITE_SHOW_ERROR_DETAILS=false
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Storage
VITE_STORAGE_PREFIX=vidnote_

# Security
VITE_HTTPS=true
