# ==============================================
# FRONTEND ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to version control

# ==============================================
# Application Settings
# ==============================================
VITE_APP_NAME=YouTube Video Summarizer
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=AI-powered YouTube video summarization tool

# ==============================================
# API Configuration
# ==============================================
# Backend API URL (adjust based on your environment)
VITE_API_BASE_URL=http://localhost:3001/api

# ==============================================
# AI Service Configuration
# ==============================================
# OpenAI API Key for AI summarization
# Get your key from: https://platform.openai.com/api-keys
VITE_OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model to use
VITE_OPENAI_MODEL=gpt-4-turbo-preview

# ==============================================
# GitHub Integration (Optional)
# ==============================================
# GitHub Personal Access Token for GitHub features
# Create token at: https://github.com/settings/tokens
VITE_GITHUB_TOKEN=your_github_token_here

# ==============================================
# Feature Flags
# ==============================================
# Enable/disable features
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=false
VITE_ENABLE_OFFLINE_MODE=false
VITE_ENABLE_EXPERIMENTAL_FEATURES=false

# ==============================================
# Analytics (Optional)
# ==============================================
# Google Analytics Measurement ID
VITE_GA_MEASUREMENT_ID=

# PostHog API Key
VITE_POSTHOG_KEY=

# ==============================================
# Storage Configuration
# ==============================================
# Local storage prefix
VITE_STORAGE_PREFIX=youtube_summarizer_

# ==============================================
# Security
# ==============================================
# Enable HTTPS in development (for testing)
VITE_HTTPS=false

# ==============================================
# Third-party Services (Optional)
# ==============================================
# Sentry DSN for error tracking
VITE_SENTRY_DSN=

# Stripe publishable key for payments
VITE_STRIPE_PUBLISHABLE_KEY=

# ==============================================
# Development Settings
# ==============================================
# Show detailed error messages
VITE_SHOW_ERROR_DETAILS=true

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=false

# API request timeout (milliseconds)
VITE_API_TIMEOUT=30000
